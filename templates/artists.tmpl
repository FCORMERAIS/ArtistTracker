{{ define "artists" }}
    <link rel="stylesheet" href="static/css/main.css">
    <nav class="menu">
        <h1>Groupie Tracker</h1>
        <ul>
            <li><a class="active" href="http://localhost:3000/Groupie-tracker">Artistes</a></li>
            <li><a href="#">Concert</a></li>
            <li><a href="#">Villes</a></li>
        </ul>
        <input class="recherche" type="search" placeholder="Recherche..." name="search"
    aria-label="Search through site content" size="30">
    <button class="btnrecherche">Recherche</button>
    </nav>
        <section id="btn_retour">
            <form class="retour" action="/Groupie-tracker" method="post">
            <button type="submit"><p>Retour</p></button> 
            </form>
        </section>
        <section id="blocks">
            <section id="artist">
                <div class="artist">
                    <h1>{{.Name}}</h1>
                    <img src="{{.Image}}" />
                </div>
            </section> 
            <section id="info">
                <div class="info">
                    <p>Date de création de groupe :</p>
                    <h2>{{.CreationDate}}</h2>
                    <p>Date du premier album :</p>
                    <h2>{{.FirstAlbum}}</h2>
                </div>
            </section>
            <section id="members">
                <div class="members">
                    <ul>
                        <h3>{{.Members}}</h3>
                    </ul>
                </div>
            </section>


            <!-- En cours de création -->
            <section id="relation">
                <div class="relation">
                    <h3>{{.Relations}}</h3>
                </div>
            </section>
        </section>
    </body>
    <footer>
        <p>&copy | Marius BOURSE - Flavio CORMERAIS - Jules OUTIN - B1 Informatique 2021/2022 | Groupie_Tracker 2022 | Mentions Légales</p>
    </footer>
    
{{ end }}